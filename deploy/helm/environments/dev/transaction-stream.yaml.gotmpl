image: 
    tag: {{ .StateValues.ci.tag }}

params:
  REDIS_HOST: radquest-dev-redis.rdx-works-main.internal
  REDIS_PORT: 6379
  REDIS_PASSWORD: ""
  LOG_LEVEL: debug
  PUBLIC_NETWORK_ID: 2
  GATEWAY_URL: https://stokenet.radixdlt.com

secrets:
  - external_secret_name: transaction-stream-postgres-url
    env_variable: "DATABASE_URL"
    aws_secret_name: "rdx-works-main-dev/eks/radquest/dev/postgres"
    aws_secret_key: "transaction-stream-database-url"
    secret_key: "transaction-stream-database-url"

  - external_secret_name: transaction-stream-ro-postgres-url
    env_variable: "RO_DATABASE_URL"
    aws_secret_name: "rdx-works-main-dev/eks/radquest/dev/postgres"
    aws_secret_key: "transaction-stream-ro-database-url"
    secret_key: "transaction-stream-ro-database-url"

ingress:
  enabled: false

autoscaling:
  enabled: false
  minReplicas: 1
  maxReplicas: 2
  targetCPUUtilizationPercentage: 70
  targetMemoryUtilizationPercentage: 70

resources:
  requests:
    cpu: 50m
    memory: 256Mi

pm2_metrics:
  enabled: true
  port: 9209

metrics:
  enabled: true
  port: 9210
  alert_labels:
    cluster: rdx-works-main-dev
    env: dev
